meta {
  name: Get Exchange By System ID
  type: http
  seq: 9
}

get {
  url: {{CedarApiUrl}}/exchange?systemId={{CedarSystemId}}&direction=both
  body: none
  auth: inherit
}

params:query {
  systemId: {{CedarSystemId}}
  direction: both
}

headers {
  Content-Type: application/json
}

script:pre-request {
  const CedarSystemId = bru.getVar("CedarSystemId")
  test("CedarSystemId is set (Call \"Get Systems\" first if it is not)", function() {
          expect(CedarSystemId).to.exist
          expect(CedarSystemId).to.not.be.empty
  })
  if (!CedarSystemId) return bru.runner.skipRequest();
}

settings {
  encodeUrl: true
}
