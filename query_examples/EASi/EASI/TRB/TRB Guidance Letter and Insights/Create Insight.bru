meta {
  name: Create Insight
  type: graphql
  seq: 2
}

post {
  url: {{url}}
  body: graphql
  auth: apikey
}

auth:apikey {
  key: Authorization
  value: {{authHeader}}
  placement: header
}

body:graphql {
  mutation CreateInsight($input: CreateTRBGuidanceLetterInsightInput!) {
      createTRBGuidanceLetterInsight(input: $input) {
          id
          title
          insight
          category
      }
  }
}

