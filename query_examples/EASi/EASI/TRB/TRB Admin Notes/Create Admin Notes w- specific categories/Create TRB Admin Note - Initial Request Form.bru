meta {
  name: Create TRB Admin Note - Initial Request Form
  type: graphql
  seq: 2
}

post {
  url: {{url}}
  body: graphql
  auth: apikey
}

auth:apikey {
  key: Authorization
  value: {{authHeader}}
  placement: header
}

body:graphql {
  mutation CreateTRBNoteInInitialRequestFormsCategory($input:CreateTRBAdminNoteInitialRequestFormInput!) {
      createTRBAdminNoteInitialRequestForm(input: $input) {
          id
      }
  }
}

body:graphql:vars {
  {
      "input": {
          "trbRequestId": "{{trbRequestID}}",
          "noteText": "test note - initial request form",
          "appliesToBasicRequestDetails": true,
          "appliesToSubjectAreas": false,
          "appliesToAttendees": true
      }
  }
}
