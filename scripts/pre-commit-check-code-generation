#!/usr/bin/env bash

GO111MODULE=off go get golang.org/x/tools/cmd/goimports || exit
go generate ./... || exit
if [[ -n ${CIRCLECI-} ]]; then
  ~/go/bin/goimports -w -local github.com/cmsgov/easi-app pkg/graph/schema.resolvers.go || exit
else
  goimports -w -local github.com/cmsgov/easi-app pkg/graph/schema.resolvers.go || exit
fi
yarn generate
