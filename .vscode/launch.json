    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach To Docker",
            "debugAdapter": "dlv-dap",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "substitutePath": [
                { "from": "${workspaceFolder}", "to": "/easi" },             

            ]


        },

        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "remoteRoot": "/usr/src/app"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        }
    ]
}